<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveActivity"
    android:orientation="vertical">
    <ImageView android:id="@+id/newlogo"
        android:layout_width="@dimen/width_100"
        android:layout_height="@dimen/height_100"
        android:layout_marginLeft="@dimen/fab_margin_16dp"
        android:src="@drawable/newsavelogo"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textSize="@dimen/font_size_20sp"
        android:textStyle="bold"
        android:textColor="@color/darkBlue"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/new1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_register"
        android:layout_below="@+id/newlogo"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin_16dp" android:layout_marginRight="@dimen/fab_margin_16dp" android:weightSum="1">
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:text="@string/sitename"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"/>
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:id="@+id/edit_save_sitename"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/margin_5"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:hint="@string/sitename"
                    android:ems="20"
                    android:layout_weight="0.5"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin_16dp"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/fab_margin_16dp"
                android:weightSum="1">
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:text="@string/Assetno"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"/>
                <EditText
                    android:textSize="@dimen/font_size_18sp"
                    android:id="@+id/edit_save_assetNo"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/margin_5"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="" android:hint="@string/Assetno" android:ems="20" android:layout_weight="0.5" android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin_16dp"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/fab_margin_16dp"
                android:weightSum="1"
                android:visibility="visible">
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:text="@string/batten"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"/>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:background="@drawable/spnr_bg"
                    android:padding="@dimen/margin_3"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                    <Spinner
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/save_spn_batn"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:spinnerMode="dropdown"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dropdown"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin_16dp"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/fab_margin_16dp"
                android:weightSum="1"
                android:visibility="visible">
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:text="@string/emr"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"/>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:background="@drawable/spnr_bg"
                    android:padding="@dimen/margin_3"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28">
                    <Spinner
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/save_spn_emr"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:spinnerMode="dropdown"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dropdown"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin_16dp"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/fab_margin_16dp"
                android:weightSum="1"
                android:visibility="visible">
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:text="@string/exitsign"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"/>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:background="@drawable/spnr_bg"
                    android:padding="@dimen/margin_3"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28">
                    <Spinner
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/save_spn_es"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:spinnerMode="dropdown"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dropdown"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin_16dp"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/fab_margin_16dp"
                android:weightSum="1">
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"/>
                <EditText
                    android:textSize="@dimen/font_size_18sp"
                    android:id="@+id/edt_save_location"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/margin_5"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:hint="@string/location"
                    android:ems="20"
                    android:layout_weight="0.5"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin_16dp"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/fab_margin_16dp"
                android:weightSum="1">
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:text="@string/propertylevel"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"/>
                <EditText
                    android:textSize="@dimen/font_size_18sp"
                    android:id="@+id/edt_save_propertyType"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/margin_5"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:hint="@string/propertylevel"
                    android:ems="20"
                    android:layout_weight="0.5"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin_16dp"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/fab_margin_16dp"
                android:weightSum="1">
                <TextView
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="wrap_content"
                    android:text="@string/comment"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"/>
                <EditText
                    android:textSize="@dimen/font_size_18sp"
                    android:id="@+id/edt_save_cmnt"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/margin_5"
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:hint="@string/comment"
                    android:ems="20"
                    android:layout_weight="0.5"
                    android:inputType="text"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin_16dp"
        android:layout_marginTop="@dimen/fab_margin_16dp"
        android:layout_marginRight="@dimen/fab_margin_16dp"
        android:layout_marginBottom="@dimen/fab_margin_16dp"
        android:weightSum="3"
        >
        <Button
            android:textSize="@dimen/font_size_20sp"
            android:textColor="@color/white"
            android:id="@+id/save_saveBtn"
            android:background="@drawable/buttoneffect"
            android:layout_width="@dimen/width_100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/height_10"
            android:layout_marginRight="@dimen/margin_5"
            android:text="@string/home_save"
            android:layout_weight="1"/>
        <Button
            android:textSize="@dimen/font_size_20sp"
            android:textColor="@color/white"
            android:id="@+id/save_nextBtn"
            android:background="@drawable/buttoneffect"
            android:layout_width="@dimen/width_100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/height_10"
            android:layout_marginRight="@dimen/margin_5"
            android:text="@string/next"
            android:layout_weight="1"/>
        <Button
            android:textSize="@dimen/font_size_20sp"
            android:textColor="@color/white"
            android:id="@+id/save_endBtn"
            android:background="@drawable/buttoneffectred"
            android:layout_width="@dimen/width_100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/height_10"
            android:text="@string/end"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:visibility="gone"
        android:id="@+id/listViewNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


</LinearLayout>